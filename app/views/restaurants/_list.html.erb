<% @restaurants.each do |restaurant| %>
    <h3><%= restaurant.name %></h3>
    <h4><%= restaurant.cuisine %><h4>
        <%= link_to 'Details', restaurant, class: "btn" %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn" %>
        <%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
    <ul>
        <li>Location: <%= restaurant.location %></li>
        <li>Average Price: <%= restaurant.avgPrice %></li>
        <li>Rating: <%= restaurant.rating %></li>
    </ul>
    <br />

  <% end %>

<br />